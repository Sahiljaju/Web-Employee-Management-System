<!DOCTYPE html>
<html>
<head>
	<title>updateEmployee</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<base href="/">
	
	


	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
	
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
	<link rel="stylesheet" type="text/css" href="css/frontend.css">
	<style type="text/css">
		td {
            border: 1px solid black;
            text-align: center;
            padding: 10px;
        }
		th {
            border: 1px solid black;
            text-align: center;
            padding: 10px;
        }

	</style>
	


</head>
<body>
	<%-include('partials/navigation') %>
	<div id="main">
		<div id="Add_s" class="Employees">
		<h3 style="margin-left: 20px; margin-top: 20px; margin-bottom: 20px;"> Update Employee Info</h3>
		<div class="container">
		
			<div class="col-12">
			  <div class="w3-bar w3-black" style="background-color: black; margin-left: 20px; margin-right: 20px;">
				  <button class="w3-bar-item w3-button" onclick="addnew('addNew')" id="goToadd"> Add Employee</button>
				  <button class="w3-bar-item w3-button" onclick="addnew('Document')" id="goToDocument">Documents</button>
				  <button class="w3-bar-item w3-button" onclick="addnew('Bankinfo')" id="goToBank">  Details</button>
			  </div>
			
			<br>
				<div id="addNew" class="NewEmployee" style=" margin-bottom: 20px;">
				<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft" >X</span>
				<form id="addNewEmployee" method="POST" enctype="multipart/form-data">	
					<div class="container" style="margin-left:20px; margin-right:20px; border-left: 1px solid;" >
						<div class="row">
							<div class="profilepicture" >
								<img src= "/images/<%=userData.profilephoto %>" id="blah" style="height: 200px; width: 200px; margin-top:20px;  ">
								<br><input type="file"  id ="actual-btn" name="profile" accept="image/*" onchange ="readURL(this);" hidden />
								<label for="actual-btn" id="my-btn" hidden>Choose File</label>					
							</div>	
							<div class="col">
								<label>Full Name *</label>
								<br><input type="text" value ="<%=userData.Fullname %>" name="FullName" required>
								<br><label>Employee ID *</label>
								<br><input type="text" value ="<%=userData.EmployeeId %>" id="EmpId"name="EmpId" required>
								<br><label>UserName *</label>
								<br><input type="text" value ="<%=userData.Username %>" name="UserName" disabled>
								<br><label>Password *</label>
								<br><input type="text" value ="<%=userData.Password %>" name="Password" disabled>
								<br><label>Team Name *</label>
								<br><input type="text" value ="<%=userData.TeamName %>" name="TeamName" >
								<br><label>Phone *</label>
								<br><input type="text" value ="<%=userData.PhoneNumber %>" name="Phone" required>
								<br><label>Home Contact </label>
								<br><input type="text" value ="<%=userData.HomeContact %>" name="HomeContact" >
								<br><label>Email Address *</label>
								<br><input type="text" value ="<%=userData.EmailAddress %>" name="email" required>
								<br><label>Monthly Salary</label>
								<br><input type="text" value ="<%=userData.MonthlySalary %>" name="MonthlySalary">
								<br><label>Total Annual Income</label>
								<br><input type="text" value ="<%=userData.TotalAnnualLeave %>" name="TotalAnnualIncome">
							</div>
							<div class="col">
								<label>Department *</label>
								<br><select id="Department"  name="Department">
									<option value ="<%=userData.Department %>" selected>"<%=userData.Department %>"</option>
									<%
									if(DepartmentData.length!=0){
									var i=1;
									DepartmentData.forEach(function(data){
									%>
								
									<option value="<%=data.DeptName %>"><%=data.DeptName %></option>
								
								<%  i++; }) %>
								<%   } %>
								</select>
								<br><label>Designation *</label>
								<br><select id="Department"  name="Designation">
									<option value ="<%=userData.Designation %>" selected>"<%=userData.Designation %>"</option>
									<%
									if(DesignationData.length!=0){
									var i=1;
									DesignationData.forEach(function(data){
									%>
								
									<option value="<%=data.DeptName %>"><%=data.DesigName %></option>
								
								<%  i++; }) %>
								<%   } %>
								</select>
								
								<br><label>Joining Date *</label>
								<br><input type="date" name="JoiningDate" value ="<%=userData.JoiningDate %>" >
								<br><label>Date of Leave </label>
								<br><input type="date" name="LeavingDate" value ="<%=userData.LeavingDate %>" >
								<br><label>Mailing Address *</label>
								<br><input type="text" name="MailingAddress" style="height: 250px" value ="<%=userData.MailingAddress %>" required>
							</div>
							<div class="col">
								<label>Father Name</label>
								<br><input type="text" name="FatherName" value ="<%=userData.FatherName %>">
								<br><label>Mother Name</label>
								<br><input type="text" name="MotherName" value ="<%=userData.MotherName %>">
								<br><label>Date of Birth</label>
								<br><input type="date" name="DateofBirth" value ="<%=userData.DateofBirth %>">
								<br><label>Gender</label>
								<br><select id="Gender" name="Gender" value ="<%=userData.Gender %>">
								   	<option value="Male">Male</option>
								    <option value="Female">Female</option>
								    <option value="other">other</option>
								</select>
								<br><label>Permanent Address * </label>
								<br><input type="text" name="PermanentAddress" style="height: 250px" value ="<%=userData.PermanentAddress %>" required>
								<button type="button"id="goDocuments" onclick="addnew('Document')" class="next">Next &raquo;</button>
							</div>
						</div>
					</div>
				</div>
				

				<div id="Document" class="NewEmployee" style="display:none">
					<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft">X</span>
					<div class="container">
						<div class="row">
							<div class="col-4">
								<label>Document Name</label>
								<br><input type="text" name="DocumentName" >
								<br><input type="file"  id ="actual-btn-document" name="certificate" accept="application/pdf" multiple />
								
									<button type="button" id="goEdit" onclick="addnew('addNew')" class="previous">&laquo; Previous</button>
									<button type="button" id="goBank" onclick="addnew('Bankinfo')" class="next">Next &raquo;</button>

							</div>
							<div class="col-8">
								<table width="100%">
									<thead>
										<th style="text-align: center;">Sr.No.</th>
										
										<th style="text-align: center;">Documents</th>
										<th style="text-align: center;">Actions</th>

									</thead>
									<tbody>
										
											
										<tr>
											<td>1</td>
											<td><%=userData.Documents %></td>
											<td><a href="/pdf/<%= userData.Documents %>" type="button" value="view" >View</a></td>
										</tr>
									
										
									</tbody>
									
								</table>
							</div>
						</div>
					</div>
				</div>

				<div id="Bankinfo" class="NewEmployee" style="display:none">
					<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft">X</span>
					<div class="container">
						<div class="row">
							<div class="col">
							
								<label>Bank Name *</label>
								<br><input type="text" name="BankName" value ="<%=userData.BankName %>" required>
								<br><label>IFSC code *</label>
								<br><input type="text" name="IFSCcode" value ="<%=userData.IFSCcode %>" required>
								<br><label>Account Number *</label>
								<br><input type="text" name="AccountNumber" value ="<%=userData.AccountNumber %>" required>
								<br><label>Account Name *</label>
								<br><input type="text" name="AccountName" value ="<%=userData.AccountName %>" required>
								<button type="button" id="goDocuments"  onclick="addnew('Document')"  class="previous">&laquo; Previous</button>
								<br><br><input type="submit" value="Add" >
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>		

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
		<script  type="text/javascript" src="./js/script.js"></script>
		<script type="text/javascript">
		function readSingleFile(e) {
			const name = e[0].name;
			document.getElementById("actual-btn").textContent = name;
		}

		function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(150)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
		</script>

</body>
</html>