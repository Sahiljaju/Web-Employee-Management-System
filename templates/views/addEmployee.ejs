<!DOCTYPE html>
<html>
<head>
	<title>addEmployee</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
	
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
	<link rel="stylesheet" type="text/css" href="css/frontend.css">

</head>
<body>
	<%-include('partials/navigation') %>
	<div id="main">
		<div id="Add_s" class="Employees">
		<h3 style="margin-left: 20px; margin-top: 20px; margin-bottom: 20px;"> Add Employee Info</h3>
		<div class="container">
		
			<div class="col-12">
			  <div class="w3-bar w3-black" style="background-color: black; margin-left: 20px; margin-right: 20px;">
				  <button class="w3-bar-item w3-button" onclick="addnew('addNew')" id="goToadd"> Add Employee</button>
				  <button class="w3-bar-item w3-button" onclick="addnew('Document')" id="goToDocument">Documents</button>
				  <button class="w3-bar-item w3-button" onclick="addnew('Bankinfo')" id="goToBank">  Details</button>
			  </div>
			
			<br>
				<div id="addNew" class="NewEmployee" style=" margin-bottom: 20px;">
				<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft" >X</span>
				<form id="addNewEmployee" method="POST" enctype="multipart/form-data">	
					<div class="container" style="margin-left:20px; margin-right:20px; border-left: 1px solid;" >
						<div class="row">
							<div class="profilepicture" >
								<img src="photos/profile.png" id="blah" style="height: 100px; width: 100px; margin-top:20px; ">
								<br><input type="file"  id ="actual-btn" name="profile" accept="image/*" onchange ="readURL(this);" hidden />
								<label for="actual-btn" id="my-btn">Choose File</label>					
							</div>	
							<div class="col">
								<label>Full Name *</label>
								<br><input type="text" name="FullName" required>
								<br><label>Employee ID *</label>
								<br><input type="text" id="EmpId"name="EmpId" required>
								<br><label>UserName *</label>
								<br><input type="text" name="UserName" required>
								<br><label>Password *</label>
								<br><input type="text" name="Password" required>
								<br><label>Team Name *</label>
								<br><input type="text" name="TeamName" required>
								<br><label>Phone *</label>
								<br><input type="text" name="Phone" required>
								<br><label>Home Contact </label>
								<br><input type="text" name="HomeContact" >
								<br><label>Email Address *</label>
								<br><input type="text" name="email" required>
								<br><label>Monthly Salary</label>
								<br><input type="text" name="MonthlySalary">
								<br><label>Total Annual Income</label>
								<br><input type="text" name="TotalAnnualIncome">
							</div>
							<div class="col">
								<label>Department *</label>
								<br><select id="Department" name="Department">
									<%
									if(DepartmentData.length!=0){
									var i=1;
 									DepartmentData.forEach(function(data){
									%>
								
									<option value="<%=data.DeptName %>"><%=data.DeptName %></option>
								
								<%  i++; }) %>
								<%   } %>
								</select>
								<br><label>Designation *</label>
								<br><select id="Department" name="Designation">
									<%
									if(DesignationData.length!=0){
									var i=1;
									DesignationData.forEach(function(data){
									%>
								
									<option value="<%=data.DesigName %>"><%=data.DesigName %></option>
								
								<%  i++; }) %>
								<%   } %>
								</select>
								<br><label>Joining Date *</label>
								<br><input type="date" name="JoiningDate" required>
								<br><label>Date of Leave </label>
								<br><input type="date" name="LeavingDate" >
								<br><label>Mailing Address *</label>
								<br><input type="text" name="MailingAddress" style="height: 250px" required>
							</div>
							<div class="col">
								<label>Father Name</label>
								<br><input type="text" name="FatherName">
								<br><label>Mother Name</label>
								<br><input type="text" name="MotherName">
								<br><label>Date of Birth</label>
								<br><input type="Date" name="DateofBirth">
								<br><label>Gender</label>
								<br><select id="Gender" name="Gender">
								   	<option value="Male">Male</option>
								    <option value="Female">Female</option>
								    <option value="other">other</option>
								</select>
								<br><label>Permanent Address *</label>
								<br><input type="text" name="PermanentAddress" style="height: 250px" required>
								<button type="button" id="goDocuments" onclick="addnew('Document')" class="next">Next &raquo;</button>
							</div>
						</div>
					</div>
				</div>
				

				<div id="Document" class="NewEmployee" style="display:none">
					<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft">X</span>					
								
									<label>Document Name</label>
									<br><input type="text" name="DocumentName" >
									<br><input type="file"  id ="actual-btn-document"name="certificate" accept="application/pdf" multiple />
									
									<br><button type="button" id="goEdit" onclick="addnew('addNew')" class="previous">&laquo; Previous</button>
									<button type="button" id="goBank" onclick="addnew('Bankinfo')" class="next">Next &raquo;</button>				
												
				</div>

				<div id="Bankinfo" class="NewEmployee" style="display:none">
					<span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft">X</span>
								
								<label>Bank Name *</label>
								<br><input type="text" name="BankName" required>
								<br><label>IFSC code *</label>
								<br><input type="text" name="IFSCcode" required>
								<br><label>Account Number *</label>
								<br><input type="text" name="AccountNumber" required>
								<br><label>Account Name *</label>
								<br><input type="text" name="AccountName" required>
								<button type="button" id="goonDocumentPage" onclick="addnew('Document')"    class="previous">&laquo; Previous</button>
								<br><br><input type="submit" value="Add" >
								</form>
					
				</div>
			</div>
		</div>
	</div>
</div>		

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
		<script  type="text/javascript" src="./js/script.js"></script>
		<script type="text/javascript">
		function readSingleFile(e) {
			const name = e[0].name;
			document.getElementById("actual-btn").textContent = name;
		}

		function readURL(input) {
        if (input.files && input.files[0]) {
			console.log(input.files[0]);
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(150)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
		</script>

</body>
</html>