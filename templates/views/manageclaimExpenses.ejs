<!DOCTYPE html>
<html>
<head>
	<title>addEmployee</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
	
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
	<link rel="stylesheet" type="text/css" href="css/frontend.css">

</head>
<body>
	<%-include('partials/navigation') %>
	<div id="main">
		<div id="Add_s" class="Employees">
		<h3 style="margin-left: 20px; margin-top: 20px; margin-bottom: 20px; color: white;">Manage Expenses</h3>
		
		<div class="container">
			<div class="col-12">
			  <div class="w3-bar w3-black" style="background-color: black; margin-left: 20px; margin-right: 20px;">
				  <button class="w3-bar-item w3-button" onclick="addnew('Myapplication')" id="goToadd">Applications</button>
				 
			  </div>
			
			<br>
            <div id="Myapplication" class="NewEmployee" style="margin-left: 20px; margin-bottom: 20px; margin-right: 20px; display:none">
                
                <div style="box-sizing: border-box; width: 100%; border: 1px solid black; ">
                    
                    <table class="table table-striped table-hover text-center">
                        <thead>
                            <th>Id</th>
                            <th>Employee Name</th>
                            <th>DateofExpense</th>
                            <th>ExpenseType</th>
                            <th>AmountofExpense</th>
                            <th>ExpenseDocument</th>					
                            
                            <th>Status</th> 
                            <th>Action</th> 
                        </thead>
                        <tbody id="tbody">
                            <%
						if(userData.length!=0){
						var i=1;
						userData.forEach(function(data){
						%>
						<tr>
							<td style="vertical-align: center;"><%=i %></td>
                            <td><%=data.EmpName %></td>							
							<td><%=data.Date %></td>
							
							<td><%=data.ExpenseType %></td>
							<td><%=data.Amount %></td>
							<td><a href="/pdf/<%= data.ExpenseDocument %>" type="button" value="view" >View</a></td>
							<td><%=data.ExpenseDocument %></td>
							<td><a type="button" href="/ExpenseClaim/<%=data.id%>">Edit</a> 
								
							</td>	
						</tr>				    												
						<%  i++; }) %>
						<% } else{ %>
							<tr>
								<td colspan="9">No Data Found</td>
							</tr>
						<% } %>
                        </tbody>
                        <tfoot>
                            
                        </tfoot>
                    </table>
                </div>	
            </div>
        

        
    </div>
				
</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
		<script  type="text/javascript" src="./js/script.js"></script>
		
</body>
</html>
