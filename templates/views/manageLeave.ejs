<!DOCTYPE html>
<html>
<head>
	<title>addEmployee</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
	
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
	<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
	<link rel="stylesheet" type="text/css" href="css/frontend.css">

</head>
<body>
	<%-include('partials/navigation') %>
	<div id="main">
		<div id="Add_s" class="Employees">
		<h3 style="margin-left: 20px; margin-top: 20px; margin-bottom: 20px;">Manage Leaves</h3>
		
		<div class="container">
			<div class="col-12">
			  <div class="w3-bar w3-black" style="background-color: black; margin-left: 20px; margin-right: 20px;">
				  <button class="w3-bar-item w3-button" onclick="addnew('Myapplication')" id="goToadd">Applications</button>
				  <button class="w3-bar-item w3-button" onclick="addnew('ApplyNew')" id="goToDocument">Details</button>
				 
			  </div>
			
			<br>
            <div id="Myapplication" class="NewEmployee" style="margin-left: 20px; margin-bottom: 20px; margin-right: 20px; display:none">
                
                <div style="box-sizing: border-box; width: 100%; border: 1px solid black; ">
                    
                    <table class="table table-striped table-hover text-center">
                        <thead>
                            <th>Id</th>
                            <th>Employee Name</th>
                            <th>Reason</th>
                            <th>Leave Type</th>
                            <th>Leave From</th>
                            <th>Leave To</th>					
                            
                            <th>Status</th> 
                            <th>Action</th> 
                        </thead>
                        <tbody id="tbody">
                            <%
						if(userData.length!=0){
						var i=1;
						userData.forEach(function(data){
						%>
						<tr>
							<td style="vertical-align: center;"><%=i %></td>
                            <td><%=data.EmpName %></td>							
							<td><%=data.Reason %></td>
							
							<td><%=data.LeavetypeDay %><%=data.LeavetypePaidorUnpaid%></td>
							<td><%=data.LeaveFrom %></td>
							<td><%=data.Leaveto %></td>
							<td><%=data.status %></td>
							<td><a type="button" href="/manageLeaveid/<%=data.id%>">Edit</a> 
								
							</td>	
						</tr>				    												
						<%  i++; }) %>
						<% } else{ %>
							<tr>
								<td colspan="9">No Data Found</td>
							</tr>
						<% } %>
                        </tbody>
                        <tfoot>
                            
                        </tfoot>
                    </table>
                </div>	
            </div>
        

        <div id ="ApplyNew" class="NewEmployee" style=" margin-left: 20px; margin-bottom: 20px; margin-right: 20px; display:none">
            <span onclick="this.parentElement.style.display='none'" class="w3-button w3-display-topleft" >X</span>
            <form method="POST" enctype="multipart/form-data">
                <div class="row" style="box-sizing: border-box; width: 93%; border: 1px solid black;  margin-right: 20px;">
                <div class="col-6">
                    <label>Subject:</label>
                    <br><input type="text" name="leaveSubject" placeholder="Asking for Leave " width="100%"  disabled/>
                    <br><br><textarea name="leave textarea" placeholder="reason of the Leave" style="height: 90px; width: 100%;" disabled></textarea>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-6">
                            <label>Leave From </label>
                            <br><input type="date" name="from" id="from" disabled>
                            <br><input type="radio" name="day" value="Fullday" disabled><label>Fullday</label>
                            <br><input type="radio" name="day" value="Halfday" disabled><label>Halfday</label>
                            <br><label>Leave Type</label>
                            <br><br><select name="LeaveType" disabled>
                            <option value = "Leave Type"></option>
                            <option value="Sick Leave">Sick Leave</option>
                            <option value="Personal Leave">Personal Leave</option>
                            <option value="Medical Emergency">Medical Emergency</option>
                            <option value="Urgent Matter">Urgent Matter</option>
                            <option value="Parental Leave">Parental Leave</option>
                            <option value="Paternity Leave">Paternity Leave</option>
                            <option value="Maternity Leave">Maternity Leave</option>
                            <option value="Annual Leave">Annual Leave</option>
                            <option value="Leave Fare Assistance(LFA)">Leave Fare Assistance(LFA)</option>
                        </select>   
                            
                            
                        </div>
                        <div class="col-6">
                            <label>Leave to </label>
                            <br><input type="date" name="to" id="to">
                            <br><input type="radio" name="Paid" value="Paid"> Paid
                            <br><input type="radio" name="Paid" value="Paid"> Unpaid
                            <br><label>Status</label>
                        <br><select name="LeaveApproved">
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                        </div>
                    </div>    
                     <input type="submit" value="save">   
                        
                        
                </div>

                </div>
            </form>
        </div>
    </div>
				
</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
		<script  type="text/javascript" src="./js/script.js"></script>
		
</body>
</html>
